{
  "name": "@jeromefitz/git-cz",
  "version": "0.0.0",
  "description": "git(moji)-cz => conventional commits, gitflow branching",
  "author": {
    "name": "Vadim Dalecky",
    "url": "http://onp4.com/@vadim/~js"
  },
  "contributors": [
    {
      "name": "Jerome Fitzgerald",
      "email": "j@jeromefitzgerald.com",
      "url": "https://jeromefitzgerald.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git",
    "directory": "packages/git-cz"
  },
  "keywords": [
    "commit",
    "conventional changelog",
    "format",
    "gitflow",
    "gitmoji",
    "pretty"
  ],
  "engines": {
    "node": ">=14"
  },
  "private": false,
  "scripts": {
    "build": "tsup-node src/*",
    "dev": "tsup-node src/* --watch",
    "---": "",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "yarn clean && rm -rf node_modules",
    "copy": "mkdir -p ./dist && ./scripts/copy.sh",
    "----": "",
    "semantic-release": "yarn copy && semantic-release",
    "semantic-release:mono": "yarn copy && semantic-release -e semantic-release-monorepo",
    "-----": "",
    "dry:run": "yarn build && node ./dist/cli"
  },
  "devDependencies": {
    "@types/chalk-pipe": "2.0.0",
    "@types/lodash": "4.14.178",
    "chai": "4.3.4",
    "isomorphic-unfetch": "3.1.0",
    "jest": "27.4.7",
    "mocha": "9.1.3",
    "rimraf": "3.0.2",
    "spawncommand": "2.2.0"
  },
  "dependencies": {
    "@jeromefitz/conventional-gitmoji": "*",
    "chalk": "5.0.0",
    "chalk-pipe": "5.1.1",
    "fast-json-stable-stringify": "2.1.0",
    "fuzzy": "0.1.3",
    "inquirer": "8.2.0",
    "inquirer-autocomplete-prompt": "1.4.0",
    "lodash": "4.17.21",
    "minimist": "1.2.5",
    "shellsync": "0.2.2",
    "word-wrap": "1.2.3"
  },
  "bin": {
    "git-cz": "./dist/cli.js",
    "gitcz": "./dist/cli.js"
  },
  "type": "module",
  "sideEffects": false,
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "*",
    "!release.config.cjs"
  ]
}
