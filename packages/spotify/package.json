{
  "name": "@jeromefitz/spotify",
  "version": "0.0.0",
  "description": "Spotify Wrapper for: Now Playing, Top Artists, & Top Tracks",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "keywords": [
    "spotify"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git",
    "directory": "packages/spotify"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "scripts": {
    "build": "tsup-node src/*",
    "dev": "tsup-node src/* --watch",
    "---": "",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "yarn clean && rm -rf node_modules",
    "copy": "mkdir -p ./dist && ./scripts/copy.sh",
    "----": "",
    "semantic-release": "yarn copy && semantic-release",
    "semantic-release:mono": "yarn copy && semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "isomorphic-unfetch": "3.1.0",
    "github-slugger": "1.4.0",
    "plaiceholder": "2.2.0"
  },
  "type": "module",
  "sideEffects": false,
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "*",
    "!release.config.cjs"
  ]
}
