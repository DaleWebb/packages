{
  "name": "@jeromefitz/conventional-gitmoji",
  "version": "0.0.0",
  "description": "Helper package for dual gitmoji / conventional commits",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git",
    "directory": "packages/conventional-gitmoji"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "scripts": {
    "build": "tsup-node src/*",
    "dev": "tsup-node src/* --watch",
    "---": "",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "yarn clean && rm -rf node_modules",
    "copy": "mkdir -p ./dist && ./scripts/copy.sh",
    "----": "",
    "semantic-release": "yarn copy && semantic-release",
    "semantic-release:mono": "yarn copy && semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@types/title": "3.4.1",
    "gitmojis": "3.8.0",
    "title": "3.4.3"
  },
  "type": "module",
  "sideEffects": false,
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "*",
    "!release.config.cjs"
  ]
}
